<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mourice.esalon.activity.LandingPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/client"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/salonclient"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="16dp"
            android:text="CLIENT LOGIN "
            android:layout_below="@+id/client"
            android:layout_alignEnd="@+id/client"
            android:layout_alignStart="@+id/client" />


    </RelativeLayout>
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/salon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/hair_drier"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="SALON LOGIN"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_below="@+id/salon"
                android:layout_alignEnd="@+id/salon"
                android:layout_alignStart="@+id/salon" />
            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>

